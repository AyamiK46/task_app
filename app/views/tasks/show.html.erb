<h3>スケジュール詳細</h3>

    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @task.title %></td>
      </tr>
  
      <tr>
        <th>開始日</th>
        <td><%= @task.start %></td>
      </tr>
  
      <tr>
        <th>終了日</th>
        <td><%= @task.end %></td>
      </tr>
  
      <tr>
        <th>終日</th>
        <td>
          <% if @task.all_day == true %>
            ○  
          <% else @task.all_day == false %>

          <% end %>
        </td>
      </tr>
  
      <tr>
        <th>スケジュールメモ</th>
        <td><%= @task.memo %></td>
      </tr>
    </table>
  
    <div>
      <ul>
        <li><%= link_to "スケジュール一覧に戻る", tasks_path %></li>
        <li><%= link_to "スケジュールを編集する", edit_task_path%></li>
        <li><%= link_to "スケジュールを削除", @task, method: :delete, data:{confirm: "本当に削除しても宜しいですか？"} %></li>
      </ul>
    </div>
  